#!/usr/bin/env ruby
require 'twitter'
require_relative '../lib/checks'
require 'rufus-scheduler'

scheduler = Rufus::Scheduler.new

def run
  my_retweet_bot = RetweetBot.new
  my_retweet_bot.follow_method
  my_retweet_bot.retweet_method
end
print run

scheduler.every '10m' do
  run
end
scheduler.join
